<div class = "container">
  <div class = "mx-auto  row  pt-5">
    <!--ジャンル検索欄）-->
    <div class="col-2 mt-5">
      <div class="list-group">
        <sapn class="list-group-item">ジャンル検索</sapn>
        <% @genres.each do |genre| %>
          <div class="list-group-item">
            <%= link_to genre.name %>
          </div>
        <% end %>
      </div>
    </div>
    <!--商品一覧-->
    <div class = "col-10">
      <h3 class = "heading">商品一覧<span>（<%= "#{@all_items.count}件" %>）</span></h3>
      <div class = "items-list">
        <% if !(@items.blank?) %>
          <% @items.each do |item| %>
            <div class = "item">
              <%= link_to public_item_path(item) do %>
                <%= attachment_image_tag item, :image, :fill, 200, 200, resize:"200×200", class:"index-img" %>
                <p class = "h6"><%= item.name %></p>
                <p class = "h6 text-right">￥<%= item.price_without_tax %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>