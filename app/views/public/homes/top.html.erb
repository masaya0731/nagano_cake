<!-- トップページ -->
<!-- 最初のロゴを表示させるための記述 -->
<div id="splash">
  <div id="splash_logo">
    <div class="fadeUp" style="font-family: cursive; font-size: 50px;">Welcome to</div>
    <div class="fadeUp" style="font-family: cursive; font-size: 50px;">NaganoCake</div>
    <div class="fadeUp" style="font-family: cursive; font-size: 50px;">Click !</div>
  </div>
</div>
<script>
  $(window).on('click',function(){
    $("#splash").delay(500).fadeOut('slow');
    $("#splash_logo").delay(300).fadeOut('slow');
  });
</script>
<!-- ここまで -->
<div class="container">
  <!--　背景の泡の表示のファイルの読み込み以下２行 -->
  <script src="bubbly-bg.js"></script>
　<script>bubbly();</script>
  <div class="flash_message text-center text-primary"><%= flash[:notice] %></div>
  <div class="flash_message text-center text-danger"><%= flash[:danger] %></div>
  <div class="row">
    <!-- 管理者側でジャンルを追加するとここに表示される -->
    <div class="col-2 mt-5">
      <%= render 'public/items/genre_search_table', genres: @genres %>
    </div>
    <div class="col-8 offset-1">
      <div class="mt-5">
        <div class="col-7 mt-5">
          <div id="theTarget">
            <div style="position: relative">
              <%= image_tag "cake3.jpeg" , size: "700x450"%>
            </div>
            <div style="opacity: 0.5; font-family: cursive;  font-size: 20px; color: black; position: absolute; top: 150px; left: 40px;">ようこそ、NaganoCakeへ!<br>
              このサイトは、ケーキ販売のECサイトになります。<br>
              会員でない方も商品の閲覧はできますが、<br>
              購入には、会員登録が必要になります。
            </div>
          </div>
        </div>
      </div>
      <!--　管理者側で商品の新規登録をすると表示される -->
      <h4 class="mt-3 ml-3 ribbon1"><strong>新着商品</strong></h4>
      <div class="col-" style="display: flex;">
        <% @items.each do |item| %>
          <div class="mt-3 mr-5">
            <%= link_to public_item_path(item) do %>
              <div><%= attachment_image_tag(item, :image, size: "200x200", fallback: "no_image.jpg", class: "top-items") %><br></div>
            <% end %>
            <div class="text-center" style="font-size: 18px;">
              <%= item.name %><br>
              <%= item.price_without_tax %>円
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- 商品一覧画面へ -->
<div class="h5 text-right mr-5 items-all-text btn_design">
  <strong class="button-text"><%= link_to "全ての商品を見る＞", public_items_path, class: "text-white" %></strong>
</div>
