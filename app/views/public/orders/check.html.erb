<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>注文情報確認</h2>
    </div>
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
          <!-- カートに入れた商品をeachで表示する -->
          <% current_customer.cart_items.each do |cart_item| %>
            <tr>
              <td>
                <!-- カートに入れた商品の画像と名前を表示する -->
                <%= attachment_image_tag cart_item.item, :image, :siza => '50×50', fallback: "no_image.jpeg" %>
                <%= cart_item.item.name %>
              </td>
              <!-- カートに入れた商品の値段と個数を表示する -->
              <td><%= (cart_item.item.price_without_tax * 1.1).floor %></td>
              <td><%= cart_item.count %></td>
              <td><%= (cart_item.item.price_without_tax * 1.1).floor * cart_item.count %></td>
              <% @cart_item_total_price += cart_item.subtotal_price %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>送料</td>
            <td>800円</td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td>¥<%= @cart_item_total_price %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td>¥<%= @cart_item_total_price + 800 %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <div class="col-md-12">
        <h2>お支払い方法</h2><br>
        <p><%= @order.payment_method_i18n %></p>
      </div>
      <div class="col-md-12">
        <h2>お届け先</h2>
        <span>
          <p>
            〒<%= @order.post_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </p>
        </span>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-2 mx-auto">
          <!-- 注文内容を確定させる　hidden_fieldを使って表す -->
          <%= form_with model: @order, url: public_orders_path, local: true do |f| %>
            <%= f.hidden_field :post_code, value: @order.post_code %>
            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <%= f.hidden_field :address, value: @order.address %>
            <%= f.hidden_field :name, value: @order.name %>
            <%= f.hidden_field :delivery_cost, value: 800 %>
            <%= f.hidden_field :total_payment, value: @cart_item_total_price %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
            <!-- 注文内容を確定させる -->
            <%= f.submit "注文を確定する" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>