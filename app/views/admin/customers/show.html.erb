<div class="container pt-3">
  <div class="row">
    <div class="col-md-5 offset-1 p-3 table-secondary text-center">
      <h4 class="pt-2 bd-highlight"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>
  <div class="row">
   <div class="col-7 m-4">
     <table class="table table-borderless">
       <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.tel %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <% if @customer.is_deleted == false %>
            <td class="text-success font-weight-bold"><%= "有効" %> </td>
              <% else %>
            <td><%= "退会" %></td>
            <% end %>
          </tr>
        </tbody>
       </table>
    </div>
  </div>
  <div class="row pb-5">
    <div class="col-md-2 offset-1 pl-5">
      <%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success" %>
    </div>
    <div class="col-md-3 offset-1">
      <%= link_to '注文履歴一覧を見る',admin_root_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

