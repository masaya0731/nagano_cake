 <div class="container">
    <div class="row">
      <div class="col-2 offset-1 pl-5">
        <h3>会員一覧</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-8 mx-auto">
        <table class="table">
          <thead>
            <tr class="table-secondary">
              <th scope="col">会員ID</th>
              <th scope="col">氏名</th>
              <th scope="col">メールアドレス</th>
              <th scope="col">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id) %></td>
                <td><%= customer.email %></td>
                <% if customer.is_deleted == false %>
                 <td class="text-success"><%= "有効" %></td>
                  <% else %>
                 <td><%= "退会" %></td>
                <% end %>
              </tr>
            <% end %>
            <%= paginate @customers %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>