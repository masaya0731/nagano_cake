<div class='container'>
  <div class='row'>
    <div class="col-11">
      <h4 class="row offset-1 my-5">商品新規登録</h4>
      <%= form_with model:@item, url: admin_items_path, local: true do |f| %>
        <div class="row form-group">
          <%= f.label :商品画像, class: "offset-2 col-3" %>
          <%= f.attachment_field :image %>
        </div>

        <div class="row form-group">
          <%= f.label :商品名, class: "offset-2 col-3" %>
          <%= f.text_field :name, placeholder:"商品名", class: 'form-control col-4' %>
        </div>

        <div class="row form-group">
          <%= f.label :商品説明, class: "offset-2 col-3" %>
          <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", class: 'form-control col-4' %>
        </div>

        <div class="row form-group">
          <%= f.label :ジャンル, class: "offset-2 col-3" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </div>

        <div class="row form-group">
          <%= f.label :税抜価格, class: "offset-2 col-3" %>
          <%= f.text_field :price_without_tax, placeholder:"1000", class: 'form-control col-4' %>
        </div>

        <div class="row form-group">
          <%= f.label :販売ステータス, class: "offset-2 col-3"  %>
          <%= f.radio_button :is_sold, true %> 販売中
          <%= f.radio_button :is_sold, false, class: "offset-1" %> 販売停止
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success offset-5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>