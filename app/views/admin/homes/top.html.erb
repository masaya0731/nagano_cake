<div class='container'>
  <div class='row'>
    <div class="col-9 mx-auto py-5">
    <h3>注文履歴一覧</h3>
    <table class="table table-secondary ">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <% @orders.each do |order| %>
              <td><%= order.created_at %></td>
              <td><%= order.name %></td>
              <td><%= order.count %></td>
              <td><%= order.status %></td>
            <% end %>
        </tr>
        </tbody>
          <%= paginate @orders %>
    </div>
  </div>
</div>