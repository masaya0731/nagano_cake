<div class="container">
   <div class="row">
      <div class="col-3 offset-1 pl-5 pb-2">
        <h3>注文履歴一覧</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-8 mx-auto">
        <table class="table">
          <thead>
            <tr class="table table-secondary">
              <th scope="col">購入日時</th>
              <th scope="col">購入者</th>
              <th scope="col">注文個数</th>
              <th scope="col">注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <tr>
               <% @orders.each do |order| %>
                <td>
                  <%= link_to order.create_at, admin_order_path(orders.id) %>
                </td>
                <td><%= order.name %></td>
                <td><%= order.count %></td>
                <td><%= order.status %></td>
              <% end %>
              <%= paginate @orders %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
