<!--　ジャンル一覧、ジャンルの新規追加画面 -->
<div class='container'>
  <div class="text-success"><strong style="font-size: 20px;"><%= flash[:success] %></strong></div>
  <div class="row">
    <div class="col-11">
      <h4 class="offset-1 my-5">ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: '/admin/genres', local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="field row form-group">
          <%= f.label :"ジャンル名", class: "col-3" %>
          <%= f.text_field :name, autofocus: true, placeholder:"ジャンル名", class: "col-4 form-control" %>
          <%= f.submit '新規登録', class: "btn btn-success btn100 offset-1" %>
        </div>
      <% end %>
    </div>
    <div class="col-6 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td></td>
              <td></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success btn100' %></td>
            </tr>
          <% end %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>